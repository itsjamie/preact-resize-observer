{
  "private": true,
  "name": "demo",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "react/sort-comp": "off",
      "indent": [
        "error",
        2
      ],
      "react/jsx-indent-props": [
        "error",
        2
      ]
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "if-env": "^1.0.0",
    "node-sass": "4.9.0",
    "preact-cli": "^2.0.0",
    "sass-loader": "7.0.3"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "normalize.css": "8.0.0",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-feather": "2.0.1",
    "preact-resize-observer": "link:../../"
  }
}
