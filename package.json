{
  "name": "preact-resize-observer",
  "version": "1.0.0",
  "description": "Element resize event for Preact",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "start": "tsc --outDir dev/ --watch",
    "build": "tsc --outDir dev/",
    "release": "npm run release:cjs && npm run release:esm",
    "release:cjs": "tsc --module commonjs --outDir dist/cjs/",
    "release:esm": "tsc --module es2015 --outDir dist/esm/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjdease/preact-resize-observer.git"
  },
  "keywords": [
    "preact",
    "resize",
    "observer",
    "element",
    "size",
    "detector"
  ],
  "author": "mjdease",
  "license": "MIT",
  "files": [
    "/dist"
  ],
  "bugs": {
    "url": "https://github.com/mjdease/preact-resize-observer/issues"
  },
  "homepage": "https://github.com/mjdease/preact-resize-observer#readme",
  "devDependencies": {
    "preact": "8.3.1",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.0",
    "tslint-react": "3.6.0",
    "typescript": "3.0.3"
  },
  "dependencies": {
    "prop-types": "^15.6.2",
    "resize-observer-polyfill": "^1.5.0"
  },
  "peerDependencies": {
    "preact": "^8.2.7"
  }
}
